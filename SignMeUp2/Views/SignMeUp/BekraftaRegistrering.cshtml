@using SignMeUp2.ViewModels;
@using LangResources

@{
    ViewBag.Title = Language.ConfirmRegistration;
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}

@model SignMeUpVM

<h2>@Language.ConfirmRegistration</h2>

@using (Html.BeginForm())
{
    <div class="grid form-group">
        <div class="col-md-12">

            @for (int stepIndex = 0; stepIndex < Model.CountSteps; stepIndex++)
            {
               @Html.DisplayFor(model => model.Steps[stepIndex], "", null)
            }

        </div>
    </div>
    
    <div class="grid form-group">
        <div class="col-md-12">
            <h3>@Language.ToPay</h3>
        </div>

        <div class="col-md-12">
            <div class="row col-md-5">
                <table class="table">
                    <tr>
                        <th>
                            @Language.Item
                        </th>
                        <th>
                            @Language.Description
                        </th>
                        <th>
                            @Language.Amount
                        </th>
                    </tr>
                    @foreach (ValViewModel post in Model.Betalnignsposter)
                {
                        <tr>
                            <td>
                                @post.TypNamn
                            </td>
                            <td>
                                @post.Namn
                            </td>
                            <td>
                                @post.Avgift
                            </td>
                        </tr>
                }
                    <tr>
                        <td></td>
                        <td>
                            <strong>@Language.Sum</strong>
                        </td>
                        <td>
                            <strong>@Model.AttBetala</strong>
                        </td>
                    </tr>

                </table>
            </div>
        </div>

        @if (ViewBag.RabattError != null)
        {
            <div class="clearfix"></div>

            <div class="row form-group top-buffer">
                <div class="col-md-5">
                    <div class="alert alert-danger" role="alert">@ViewBag.RabattError</div>
                </div>
            </div>
        }

        @if (Model.Rabatt == null)
    {
            <div class="clearfix"></div>

            <div class="row form-group">
                <div class="vert-align">
                    @Html.LabelFor(model => model.Rabattkod, htmlAttributes: new { @class = "control-label col-md-1 hidden-xs vert-align" })
                </div>
                <div class="col-md-2 col-xs-6">
                    @Html.EditorFor(model => model.Rabattkod, new { htmlAttributes = new { @class = "form-control", @placeholder = Language.DiscountCode } })
                </div>
                <div class="col-md-1 col-xs-6">
                    <input type="submit" value="@Language.UseDiscountCode" name="rabatt" class="btn btn-default cancel" />
                </div>
            </div>
    }

        <div class="clearfix"></div>

        @if (Model.KanBetalaMedFaktura)
        {
        <div class="form-group row">
            <div class="col-md-5 col-xs-12">
                <div class="alert alert-warning" role="alert">@Language.OnlyCompInvoice</div>
            </div>
        </div>
        }

        <div class="form-group row">
            <div class="col-md-1 col-xs-4">
                <input type="submit" value=@Language.Correct name="korrigera" class="btn btn-default cancel" />
            </div>

            @if (Model.KanBetalaMedFaktura)
            {
            <div class="col-md-offset-1 col-md-1 col-xs-4">
                <input type="submit" value=@Language.Invoice name="faktura" class="btn btn-default" />
            </div>
            }

            <div class="col-md-1 col-xs-4">
                <input type="submit" value=@Language.Pay name="betala" class="btn btn-default" />
            </div>
        </div>
    </div>
}


