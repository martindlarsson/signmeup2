        <dt>
            @Html.DisplayNameFor(model => model.Invoices.Postadress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Invoices.Postadress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Invoices.Namn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Invoices.Namn)
