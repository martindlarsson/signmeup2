@model IEnumerable<SignMeUp2.DataModel.Evenemang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}

<h2>Alla evenemang</h2>

<table class="table">
    <tr>
        <th>
            Arrangör
        </th>
        <th>
            Evenemang
        </th>
        <th>
            Anmälan öppnar
        </th>
        <th>
            Anmälan stänger
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Organisation.Namn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Namn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegStop)
            </td>
            <td>
                @Html.ActionLink("Jag vill anmäla mig!", "Index", "SignMeUp", new {  id = item.Id}, null) |
                @Html.ActionLink("Lista på anmälda", "Startlista", "Home", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
