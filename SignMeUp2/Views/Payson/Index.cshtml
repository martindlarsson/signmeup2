@model SignMeUp2.Models.PaysonKontaktViewModel

@{
    ViewBag.Title = "Kontaktinformation för betalning";
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}

<script>
    $(document).keypress(function (e) {
        if (e.keyCode == 13) {
            $("input[data='send']").focus().click();
            return false;
        }
    });
</script>

<h2>Kontaktinformation för betalning</h2>

