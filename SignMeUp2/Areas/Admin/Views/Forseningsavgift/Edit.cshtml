@model SignMeUp2.ViewModels.ForseningsavgiftVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Redigera förseningsavgift</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.EditorFor(model => model)

        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Spara" class="btn btn-success" />
            </div>
            <div class="col-md-offset-3 col-md-2">
                @Html.ActionLink("Radera", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger", @onclick = "return confirm('Är du säker på att du vill radera denna förseningsavgift?');" })
            </div>
        </div>
    </div>
}

@{Html.RenderPartial("_footerEntity", Model);}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function () {
            $('.datetimepicker').datetimepicker({
                locale: 'sv'
            });
        });
    </script>
}
