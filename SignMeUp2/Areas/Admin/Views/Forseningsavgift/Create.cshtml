@model SignMeUp2.Data.Forseningsavgift

@{
    ViewBag.Title = "Lägg till Förseningsavgift";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Lägg till ny förseningsavgift eller tillfällig rabatt</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.EditorFor(model => model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lägg till" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="row">
    @Html.ActionLink("Tillbaka till listan", "Index", new { id = ViewBag.Evenemang.Id }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function () {
            $('.datetimepicker').datetimepicker({
                locale: 'sv'
            });
        });
    </script>
}
