@model IEnumerable<SignMeUp2.Data.Forseningsavgift>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("_headerIndex");}

<table class="table">
    <tr>
        <th>
            Namn
        </th>
        <th>
            Summa
        </th>
        <th>
            Avgift eller rabatt
        </th>
        <th>
            Från
        </th>
        <th>
            Till
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.Namn)
        </td>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.Summa)
        </td>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.PlusEllerMinus)
        </td>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.FranDatum)
        </td>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.TillDatum)
        </td>
        <td class="vert-align">
            @Html.ActionLink("Redigera", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Ta bort", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@{Html.RenderPartial("_footerIndex", Model);}
