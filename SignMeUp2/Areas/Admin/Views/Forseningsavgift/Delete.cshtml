@model SignMeUp2.Data.Forseningsavgift

@{
    ViewBag.Title = "Ta bort";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Ta bort förseningsavgift</h2>

<h3>Är du säker på att du vill ta bort denna?</h3>

@if (ViewBag.Error != null)
{
    <div class="row">
        <div class="alert alert-danger col-md-5" role="alert">
            @ViewBag.Error
        </div>
    </div>
}

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Namn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Namn)
        </dd>

        <dt>
            Summa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Summa)
        </dd>

        <dt>
            Plus eller minus
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlusEllerMinus)
        </dd>

        <dt>
            Från
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FranDatum)
        </dd>

        <dt>
            Till
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TillDatum)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        Html.RenderPartial("_footerDelete");
    }
</div>
