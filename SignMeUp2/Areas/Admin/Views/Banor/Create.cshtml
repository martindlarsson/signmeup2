@model SignMeUp2.Data.Banor

@{
    ViewBag.Title = "Lägg till bana";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Lägg till bana</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Namn, "Namn", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Namn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Namn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Avgift, "Avgift", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Avgift, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Avgift, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AntalDeltagare, "Antal deltagare", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AntalDeltagare, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AntalDeltagare, "", new { @class = "text-danger" })
            </div>
        </div>
        
        @* Om evenemanget inte är satt ska vi visa en dropdown för alla evenemang *@
        @if (Model.EvenemangsId == 0)
        {
        <div class="form-group">
            @Html.LabelFor(model => model.EvenemangsId, "Evenemang", htmlAttributes: new { @class = "control-label col-md-2" })
            Evenemang
            <div class="col-md-10">
                @Html.DropDownList("EvenemangsId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EvenemangsId, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        else
        {
            @Html.HiddenFor(model => model.EvenemangsId)
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lägg till" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@{Html.RenderPartial("_footerCreate", Model);}


