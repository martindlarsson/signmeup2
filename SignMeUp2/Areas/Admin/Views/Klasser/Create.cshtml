@model SignMeUp2.Data.Klasser

@{
    ViewBag.Title = "Lägg till klass";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Lägg till klass</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.EditorFor(model => model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lägg till" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="row">
    @Html.ActionLink("Tillbaka till listan", "Index", new { id = ViewBag.Evenemang.Id }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
