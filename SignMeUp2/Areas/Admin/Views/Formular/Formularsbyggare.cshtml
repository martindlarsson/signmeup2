</div>

<!-- Steg template -->
<script type="text/html" id="step-template">
    <!-- Lägga-till knapp -->
    <div class="panel panel-default">
        <button type="button" class="btn btn-default btn-sm center-block" data-bind="click: $parent.addStep">Lägg till steg här</button>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="clearfix" style="margin-bottom: 30px;">
                <!-- panel head -->
                <div class="pull-left"><span contenteditable="true" data-bind="contenteditable: namn"></span></div>
                <div class="pull-right">

                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus"></span> <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" data-bind="click: addField.bind($data, 'information')">Informationstext</a></li>
                            <li><a href="#" data-bind="click: addField.bind($data, 'text')">Textfråga</a></li>
                            <li><a href="#" data-bind="click: addField.bind($data, 'val')">Flervalsfråga</a></li>
                        </ul>
                    </div>

                    <button type="button" class="btn btn-default btn-sm" data-bind="click: $parent.removeStep">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>

                    <button type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-align-justify"></span>
                    </button>
                </div>
            </div>

            <!-- ko template: {foreach: fields, name: 'field-template'} -->
            <!-- /ko -->
        </div>
    </div>
</script>

<!-- Fält template -->
<script type="text/html" id="field-template">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="pull-left editable" data-bind="inline: title()"></div>

            <div class="pull-right">
                <button type="button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-pencil"></span>
                </button>

                <button type="button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-align-justify"></span>
                </button>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="edit-information-template">
</script>

<script type="text/html" id="edit-choice-template">
</script>

<script type="text/html" id="edit-text-template">
</script>

<script src="~/Scripts/viewModels/FormViewModel.js"></script>
<script type="text/javascript">
    $(function () {
        var formular = @Html.Raw(Json.Encode(TempData["formular"]));
        var formularObj = ko.utils.parseJson(formular);
        console.log("Formuläret i JSON: " + formular);
        initKO();
        ko.applyBindings(new FormViewModel(formularObj));
    });
</script>

@Scripts.Render("~/bundles/knockout")
