
@{
    ViewBag.Title = "Formularsbyggare";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Formulärsbyggaren</h2>
<!-- Formulärets egenskaper -->
<div class="row clearfix">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">Formulärets egenskaper</div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="avgift">Avgift:</label>
                    <input class="form-control" id="avgift">
                </div>
                <div class="form-group">
                    <label for="max">Max antal anmälningar:</label>
                    <input class="form-control" id="max">
                </div>
                <div class="form-group">
                    <label for="aktivitet">Aktivitet:</label>
                    <input class="form-control" id="aktivitet">
                </div>
                <div class="checkbox">
                    <label><input type="checkbox"> Publikt</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-md-7">
        <div class="editable" data-bind="inline: Namn" placeholder="Formulärets titel..."></div>
    </div>
    <div class="col-md-1">
        <button class="btn btn-default pull-right" data-bind="click: addStep" title="Lägg till ett formulärssteg"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
</div>

<div class="help-block"></div>


<!-- Formuläret -->
<div class="row clearfix">

    <div class="col-md-8">

        <!-- ko template: {foreach: steps, name: 'step-template'} -->
        <!-- /ko -->

        <!-- Lägga-till knapp -->
        <div class="panel panel-default">
            <button type="button" class="btn btn-default btn-sm center-block" data-bind="click: addStep">Lägg till steg här</button>
        </div>

        <button class="btn btn-default" data-bind="click: addStep"><span class="glyphicon glyphicon-plus"></span> Nytt steg</button>
        <button class="btn btn-default">Förhandsgranska</button>
    </div>

