@model IEnumerable<SignMeUp2.Data.Rabatter>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("_headerIndex");}

<table class="table">
    <tr>
        <th>
            Rabattkod
        </th>
        <th>
           Summa
        </th>
        <th>
            Beskrivning
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.Kod)
        </td>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.Summa)
        </td>
        <td class="vert-align">
            @Html.DisplayFor(modelItem => item.Beskrivning)
        </td>
        <td class="vert-align">
            @Html.ActionLink("Redigera", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Ta bort", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@{Html.RenderPartial("_footerIndex", Model);}
